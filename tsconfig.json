{
  "compilerOptions": {
    "outFile": "./phosphorus.dist.js",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es6",
    // Make TypeScript more strict than it is by default without
    // making it restrictive.
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "include": [
    "phosphorus/**/*",
  ],
}
